~~معضل ) % 5 % ( فمن لابد بفناء الجدار % وآو إلى نفق مهمل ) % 6 % ( ومن
~~مستجير ينادي الغريق % هناك ومن صائح معول ) % 7 % ( وجادت علينا سماء
~~السقوف % بدمع من الوجد لم يهمل ) % 8 % ( كأن حراما له أن يرى % يبيسا من
~~الأرض لم يبلل ) % 9 % ( وأقبل سيل له روعة % فادبر كل من المقبل ) % 10 %
~~( يقلع ما شاء من دوحة % وما يلق من صخرة يحمل ) %
# ____________________
# PageV01P0161
# 11 % ( كأن باحشائه إذ بدا % أجنة حبلى ولم تحبل ) % 12 % ( فمن عامر رده
~~غامرا % ومن معلم عاد كالمجهل ) % 13 % ( كفانا بليته ربنا % فقد وجب الشكر
~~للمفضل ) % 14 % ( فقل للسماء أبرقي وارعدي % فإنا رجعنا إلى المنزل ) %
# ____________________
# PageV01P0162
# البحر : - 1 % ( ألا رب أعداء لئام قريتهم % متون سيوف أو صدور عوالي ) %
~~2 % ( إذا كلبهم يوما عوى بي رميتهم % بكلب إذا عاوى الكلاب عوى لي ) %
# ____________________
# PageV01P0163
# البحر : - 1 % ( قل للغزال الذي صار في الملاحة قبله % وفاق في الحسن من
~~بعده ومن كان قبله ) % 2 % ( ماذا تقول لصب شفاؤه منك قبلة م % ) %
# ____________________
# PageV01P0164
# البحر : - 1 % ( كأن الشقائق إذ أبرزت % غلالة لاذ وثوب أحم ) % 2 % (
~~قطاع من الجمر مشبوبة % بأطرافها لمع من حمم ) %
# ____________________
# PageV01P0165
# البحر : - 1 % ( أهلا بظبي حماه قصر % كجنة قد حوت نعيما ) % 2 % ( طرقته
~~لا أهاب سوءا % أباحني حبه الحريما ) % 3 % ( فجاد من فيه لي براح % شفى
~~حريقا به قديما ) % 4 % ( أفدي حريقا أباح ريقا % لا بل حريما أباح ريما ) %
# ____________________
# PageV01P0166
# البحر : - 1 % ( عجبت لوغد قد جذبت بضبعه % فاصبح يلقاني بتيه وبيسما ) %
~~2 % ( يروم مساماتي ومن دونها السما % وكيف يباريني سموا وبي سما ) %
# ____________________
# PageV01P0167
# البحر : - 1 % ( إذا ما جاد بالأموال ثنى % ولم تدركه في الجود الندامه )
~~% 2 % ( وإن هجست خواطره بجمع % لريب حوادث قال الندى مه ) %
# ____________________
# PageV01P0168
# البحر : - 1 % ( جامل الناس في المعا % ش وخل المزاحمه ) % 2 % ( وتفاصح
~~وقل لمن % يتعاطى المزاح مه ) %
# ____________________
# PageV01P0169
# البحر : - 1 % ( أتبغي باعتمادك ذخر أجر % وأنت لسوء فعلك بي أثيم ) % 2
~~% ( تسير وفي فؤادي نار وجد % دموعي عندها أبدا سجوم ) % 3 % ( فللأفكار في
~~صدري اعتلاج % وللأشجان في قلبي هجوم ) % 4 % ( أودع فيك صفو العيش حتى %
~~تعود فيرجع الأنس المقيم ) %
# ____________________
# PageV01P0170
# البحر : - 1 % ( ألا ليت الركاب غدون وقفا % علينا لا تسير ولا تريم ) %
~~2 % ( فيسقم منكم عزم صحيح % ويبرأ عنده قلب سقيم ) % 3 % ( وننعم باجتماع
~~ليس يخشى % عليه البين والدهر الغشوم ) % 4 % ( فمشرع عيشه أبدا جمام %
~~ومرعى أنسه أبدا جميم ) % 5 % ( بأمن لا يحل له حرام % وعز لا يباح له حريم
~~) % 6 % ( ولهو لا يخالطه غرام % ولا يلوى به أبدا غريم ) %
# ____________________
# PageV01P0171
# البحر : - 1 % ( قد أتاني من صديق كلام % كلآل زانهن نظام ) % 2 % ( فسرى
~~في القلب مني سرور % مطرب يعجز عنه المدام ) % 3 % ( مثل ما يرتاح شيخ بنات
~~% حوله من جمعهن زحام ) % 4 % ( فدعا الله طويلا يرجى % خلفا من نسله لا
~~يذام ) % 5 % ( فأتاه بعد يأس بشير % قال يا بشراي هذا غلام ) %
# ____________________
# PageV01P0172
# البحر : - 1 % ( يصاب الفتى في أهله برزية % وما بعدها منها أهم وأعظم )
~~% 2 % ( فإن يصطبر فيها فأجر موفر % وإن يك مجزاعا فوزر مقدم ) %
# ____________________
# PageV01P0173
# البحر : - 1 % ( يا من دعانا دعوة لم تتم % أبدعت جدا في الفعال الألأم )
~~% 2 % ( وبنت عن بر وعن تكرم % قد كان يكفينا يسير المطعم ) % 3 % ( وجبة
~~ظبي ناعم مختزم % وكسر من خبزك المحرم ) % 4 % ( وكوز ماء من قراح شبم %
~~لكن جبنت عن طراد اللقم ) % 5 % ( وقلت للضيف انكبابا للفم % شنشنة أعرفها
~~من أخزم ) %
# ____________________
# PageV01P0174
# البحر : - 1 % ( يا من يعد لسانه % أهل القريض له مجنا ) % 2 % ( لك خاطر
~~لبدائع % الألفاظ والمعنى مسنى ) % 3 % ( حاشى لدهرك أن % يعود فتيه أبدا مسنى ) %
# ____________________
# PageV01P0175
# البحر : - 1 % ( أضحى يروم غيلتي % بالمكر والمداهنه ) % 2 % ( فعل خصي
~~عاجز % قطعت بالمدى هنه ) %
# ____________________
# PageV01P0176
# البحر : - 1 % ( أقيك بنفسي صرف الردى % وحاشاك يا أملي أن تحينا ) % 2 %
~~( وقدمت قبلك نحو الحمام % وبعد مماتي فعش أنت حينا ) %
# ____________________
# PageV01P0177
# البحر : - 1 % ( وحياة من أصفي هواي له % ما جن إظلام ولاح سنا ) % 2 % (
~~ليس الذي يجزي المحب به % من قتله حلا ولا حسنا ) %
# ____________________
# PageV01P0178
# البحر : - 1 % ( بليت بشادن أضحى فؤادي % رهين هواه ليس يفك رهنه ) % 2 %
~~( رمتني مقلتاه فما وقاني % سهام الحتف من درع وجنه ) % 3 % ( كذلك قال
~~خالقنا تعالى % جعلنا بعضكم للبعض فتنه ) %
# ____________________
# PageV01P0179
# البحر : - 1 % ( لي دين في هواه % ليته أنجز دينه ) % 2 % ( لا قضى الله
~~ببين % أبدا بيني وبينه ) %
# ____________________
# PageV01P0180
# البحر : - 1 % ( أصبحت من رأيت في جنه % ) %
# ____________________
# PageV01P0181
# البحر : - 1 % ( قام بلا عقل ولا دين % يخلط تصفيقا بتأذين ) % 2 % (
~~فنبه الأحباب من نومهم % ليخرجوا في غير ما حين ) % 3 % ( كأنما غص بها
~~حلقه % أغصه الله بسكين ) %
# ____________________
# PageV01P0182
# البحر : - 1 % ( سقيا لدهر مضى والوصل يجمعنا % ونحن نحكي عناقا شكل
~~تنوين ) % 2 % ( فصرت إذا علقت قلبي حبائلكم % بسهم هجرك ترمي ثم تنويني ) %
# ____________________
# PageV01P0183
# البحر : - 1 % ( صل محبا أعياه وصف هواه % فضناه ينوب عن ترجمانه ) % 2 %
~~( كلما هم بالرقاد تصدت % مقلتاه بدمعه ترجمانه ) %
# ____________________
# PageV01P0184
# البحر : - 1 % ( لي رفيق شهم الفؤاد يماني % غزل في قصافة القضبان ) % 2
~~% ( لا يغني في العظم إلا إذا أصبح % نشوان من نجيع قاني ) %
# ____________________
# PageV01P0185
# البحر : - 1 % ( عمر الفتى ذكره لا طول مدته % وموته خزيه لا يومه الداني
~~) % 2 % ( فأحي ذكرك بالأحسان تودعه % تجمع بذلك في الدنيا حياتان ) %
# ____________________
# PageV01P0186
# البحر : - 1 % ( أهدى صديق لي من جوين % بنات قر رضعت ثديين ) % 2 % (
~~ماء سحاب بعد ماء عين % كأنها سبائك اللجين ) % 3 % ( ما صاغها بالنار كف
~~قين % أو قطع البلور ملء العين ) % 4 % ( صافية من شوب كل شين % تزين نادي
~~القوم أي زين ) % 5 % ( فيها شفاء من غليل الحين % حبي لها حب بغير مين ) %
~~6 % ( محبة الشيعة للحسين % ) %
# ____________________
# PageV01P0187
# البحر : - 1 % ( كأن الشرار على نارنا % وقد راق منظره كل عين ) % 2 % (
~~سحالة تبر إذا ما علت % فأما هوت ففتات اللجين ) %
# ____________________
# PageV01P0188
# البحر : - 1 % ( يا شادنا غاب وجه الحسن لولاه % كأن يوسف لما مات ولاه )
~~% 2 % ( ولاه رقى ظرف في شمائله % فاشتط في الحكم لما أن تولاه ) % 3 % (
~~ارحم فتى مدنفا ما إن يخلصه % من غمرة العشق إلا أنت والله ) %
# ____________________
# PageV01P0189
# البحر : - 1 % ( ما صور أبدع في % تركيبها أصحابها ) % 2 % ( مركبها
~~الأيدي وفي % هاماتها أذنابها ) %
# ____________________
# PageV01P0190
# البحر : - 1 % ( ما شبح يعجب من رآه % صفرته تخبر عن ضناه ) % 2 % ( يبكي
~~بجفن غائب كراه % أدمعه تزيد في قواه ) % 3 % ( معذب الليل إلى ضحاه % تلهب
~~نار الشوق في حشاه ) %
# ____________________
# PageV01P0191
# البحر : - 1 % ( وكم حاسد لي انبرى فانثنى % لغصة نفس شجاها شجاها ) % 2
~~% ( ومن أين يسمو لنيل العلا % وما بث مالا ولا راش جاها ) %
# ____________________
# PageV01P0192
# البحر : - 1 % ( ويح جسمي من غزال % مقلتاه . . شفتاه ) % 2 % ( وهو إن
~~جاد بلثم % شفتاه شفتاه ) %
# ____________________
# PageV01P0193
# البحر : - 1 % ( لنا صديق يجيد لقما % راحته في أذى قفاه ) % 2 % ( ما
~~ذاق من كسبه ولكن % أذى قفاه أذاق فاه ) %
# ____________________
# PageV01P0194
# البحر : - 1 % ( لئن أنت ناصرت بدر الدجى % ونازعت شمس الضحى أوجها ) % 2
~~% ( لما كنت أفضل في حالة % من الكلب كلا ولا أوجها ) %
# ____________________
# PageV01P0195
# البحر : - 1 % ( إن لي في الهوى لسانا كتوما % وجنانا يخفي حريق جواه ) %
~~2 % ( غير أني أخاف دمعي عليه % ستراه يفشي الذي ستراه ) %
# ____________________
# PageV01P0196
# البحر : - 1 % ( نبت بك عن أوطان عزك غيبة % فكنا كزند عطلت من سوارها )
~~% 2 % ( وكنت الثريا حين عادت وأشرقت % أمنا بها الآفات بعد حذارها ) %
# ____________________
# PageV01P0197
# البحر : - 1 % ( أقول لشادن في الحسن فرد % يصيد بلحظة قلب الكمي ) % 2 %
~~( ملكت الحسن أجمع في قوام % فاد زكاة منظرك البهي ) % 3 % ( وذلك أن تجود
~~لمستهام % بريق من مقبلك الشهي ) % 4 % ( فقال أبو حنيفة لي إمام % فعندي
~~لا زكاة على الصبي ) %
# ____________________
# PageV01P0198
# البحر : - 1 % ( تفاءلت للمولود في بطن مصحف % فبشر بإبن قادم إسمه يحيى
~~) % 2 % ( فأصدق به من مخبر ومبشر % وأحر بأن أسميه يحيى لكي يحيا ) % 3 %
~~( وإني لأرجو الله يسعد جده % فيحظى بفوز في الممات وفي المحيا ) % 4 % (
~~ويكسى رداء العلم والحلم والتقى % فيدرك عقبى من تعفف واستحيا ) % 5 % (
~~ومما يقوى فيه ظني أنه % سمي نبي مرسل شافه الوحيا ) %
# ____________________
# PageV01P0199
# البحر : - 1 % ( قد كان من زهرات العيش لي غصن % يميس لطفا وطول الدهر
~~أجنيه ) % 2 % ( إذا خلوت فريحان أشممه % وإن خلوت فقمري أنا غيه ) % 3 % (
~~وإن شكوت من الأيام نازلة % سليت قلبي به مما أقاسيه ) % 4 % ( أضحى يرفرف
~~قلبي حوله شفقا % ويشفق النفس من سوء يدانيه ) % 5 % ( من يدي حتى شوى كبدي
~~% كيد من الدهر لا تعدي مراميه ) % 6 % ( لم أنسه والردى يمحو ملاحته %
~~ولحظه قاصد طرفي يناجيه ) % 7 % ( حيران يبغي دواعي ما ألم به % وليس بي
~~حيلة فيه فأكفيه ) % 8 % ( وقد تبدل من سكر الشباب ضحى % بسكرة الموت تعلو
~~في تراقيه ) % 9 % ( وللحياة وجود في جوارحه % وللوسامة ذوب في مآقيه ) %
~~10 % ( تحنوالمنون إلى حوبائه ولعا % يهدم الشيء يأبى أن يدانيه ) %
# ____________________
# PageV01P0200
# 11 % ( مبد أسرته مما يساورها % رشحا تنافسه حسنا لآليه ) % 12 % ( ما
~~زال في أنة موصولة بشجى % يديم لي نفسا تدمي مجاريه ) % 13 % ( حتى خبا نور
~~وجه لا خفاء به % وألهبت نار وجد كنت أخفيه ) % 14 % ( آليت لا أقتني علقا
~~بقاسمه % أيدي الردى قسما يوما أواليه ) %
# ____________________
# PageV01P0201
# البحر : - 1 % ( أبا بشر فقدت لذيذ عيشي % بفقدي طيب عشرتك الرضيه ) % 2
~~% ( قضى دهر بتفريق علينا % خؤون شأنه جور القضيه ) % 3 % ( دجت أيامنا مذ
~~غبت عنا % وكانت منك مشرقة مضيه ) %
