وتفسيره أن " إل " فعل أمر، و " ابن " مفعول، و " عن " بمعنى " أن " أبدلت
~~الهمزة عينا، و " وحسن " فعل ماض، و " ذا مذهب " حال، و " فواصل " فاعل، و
~~" إ " أمر، و " ذا الملهوف " مفعول، " وعطاء " مفعول ثان، و " حسن " منادى،
~~و " المحامد " مفعول " تنل ".
