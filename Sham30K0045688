~~% وسكنت في ظل الحجال ) % 4 % ( وبلغت مني غاية % لم أدر فيها ما احتيالي ) %
# ____________________
# PageV01P0060
# البحر : طويل 1 % ( إذل لمن أهوى لأدرك عزة % وكم عزة قد نالها المرء
~~بالذل ) % 2 % ( فلو كنت أسلوه لسوء فعاله % لقد كان في إقصائه لي ما يسلي ) %
# ____________________
# PageV01P0061
# البحر : رمل تام 1 % ( صرمت أسماء حبلي فانصرم % ظلمتنا كل من شاء ظلم )
~~% 2 % ( و ستحلت قتلنا عامدة % وتجنت عللا لم تجترم ) %
# ____________________
# PageV01P0062
# البحر : متقارب تام 1 % ( شغلت اشتغالي ونفسي بكم % وأمسيت صبا إلى قربكم
~~) % 2 % ( فإن بالهوى مرة عدتم % فإني إذن عدت عبدا لكم ) %
# ____________________
# PageV01P0063
# البحر : بسيط تام 1 % ( قد رابني أن صددتم في مجاملة % وأنكر القلب أن
~~جئنا بحجكم ) % 2 % ( فما الصدود وقلبي عندكم علق % وما الذنوب التي هاجت بحربكم ) %
# ____________________
# PageV01P0064
# البحر : مجزوء الرمل 1 % ( ألبس الماء المداما % واسقني حتى أناما ) % 2
~~% ( وأفض جودك في النا % س تكن فيهم إماما ) % 3 % ( لعن الله أخا ال % بخل
~~وإن صلى وصاما ) %
# ____________________
# PageV01P0065
# البحر : مجزوء الكامل 1 % ( أوقعت في قلبي الهوى % ونجوت منه سالمه ) % 2
~~% ( وبدأتني بالوصل ثم % م قطعت وصلي ظالمه ) % 3 % ( توبي فإنك عالمه % أو
~~لا فإني آثمه ) %
# ____________________
# PageV01P0066
# البحر : متقارب تام 1 % ( هنيئا رضيت بما تصنعين % وإن كان في الحب غير
~~استقامه ) % 2 % ( أموت بدائي وكرب الهوى % وأنت مناتي رزقت السلامه ) % 3
~~% ( أهان بهجركم كلما % أريتكم بالوصال الكرامه ) %
# ____________________
# PageV01P0067
# البحر : خفيف تام 1 % ( باح بالوجد قلبك المستهام % وجرت في عظامك
~~الأسقام ) % 2 % ( يوم لا يملك البكاء أخو ال % شوق فيشفى ولا يرد السلام ) %
# ____________________
# PageV01P0068
# البحر : طويل 1 % ( أرى جسدي يبلى وسقمي باطن % وفي كبدي داء وقلبي سالم
~~) % 2 % ( فما السقم إلا دون سقم أصابني % ولا الجهد إلا والذي بي أعظم ) %
# ____________________
# PageV01P0069
# البحر : طويل 1 % ( سلام على من لا يرد سلامي % ومن لا يراني موضعا لكلام
~~) % 2 % ( وماذا عليه أن يرد مسلما % إذا كان يقضي بالسلام ذمامي ) %
# ____________________
# PageV01P0070
# البحر : سريع 1 % ( بين الإزارين من المحرم % تدليه عقل الرجل المسلم ) %
~~2 % ( في قد غصن البان لكنه % من طيبات الشجر المطعم ) % 3 % ( مر إلى
~~الركن فزاحمته % فالتمس الركن ولم يلثم ) % 4 % ( وفات بالسبق إلى زمزم %
~~وكانت اللذات في زمزم ) % 5 % ( شربت فضل الماء من بعده % فلست أنسى طعمه
~~في الفم ) %
# ____________________
# PageV01P0071
# البحر : مديد تام 1 % ( نام عذالي ولم أنم % واشتفى الواشون من سقمي ) %
~~2 % ( وإذا ماقلت : بي ألم % شك من أهواه في ألمي ) %
# ____________________
# PageV01P0072
# البحر : سريع 1 % ( ما صنع الهجران لا كانا % هاج علي الهجر أحزانا ) % 2
~~% ( ونم طرفي بدخيل الهوى % فصار ما أسررت إعلانا ) %
# ____________________
# PageV01P0073
# البحر : منسرح 1 % ( زودني يوم سار أحزانا % كان له الله حيثما كانا ) %
~~2 % ( إن لم يكن حبه قد أقلقني % فلا صفا العيش لي ولا لانا ) %
# ____________________
# PageV01P0074
# البحر : سريع 1 % ( واكبدي من زفرات الضنى % حق لها مما تذوب الفنا ) % 2
~~% ( لم يضع اللوم على عاشق % شفرته إلا انتحاني أنا ) %
# ____________________
# PageV01P0075
# البحر : بسيط تام 1 % ( ومدمن الخمر يصحو بعد سكرته % وصاحب الحب يلقى
~~الدهر سكرانا ) % 2 % ( وقد سكرت بلا خمر يخامرني % لما ذكرت وما أنساه إنسانا ) %
# ____________________
# PageV01P0076
# البحر : هزج 1 % ( أما والله جوزي % ت بالإحسان إحسانا ) % 2 % ( لما صد
~~الذي أهوى % ولا مل ولا خانا ) % 3 % ( رأيت الناس من ألقى % عليهم نفسه
~~هانا ) % 4 % ( فزر غبا تزد حبا % وإن جرعت أحزانا ) %
# ____________________
# PageV01P0077
# البحر : طويل 1 % ( % لسان بلى لو كان غيرك ألسن ) % 2 % ( تغيب فأخلو
~~بالهموم ونلتقي % كأني إذا ألزمتني ليس لي ) %
# ____________________
# PageV01P0078
# البحر : وافر تام 1 % ( ألا يا أقبح الثقلين فعلا % وأحسن ما تأملت
~~العيون ) % 2 % ( يرى حسنا فلا يجزي عليه % وينزل بي عقوبته الظنون ) % 3 %
~~( ولكني أكذب فيه ظني % وعندي من شواهده يقين ) %
# ____________________
# PageV01P0079
